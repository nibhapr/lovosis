---
import { getCollection } from "astro:content";
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@/components/ui/buttons/PrimaryCTA.astro";
import { unvData } from "@/data/camera";
interface Card {
  id: number;
  title: string;
  desc: string;
  img: string;
  alt: string;
  author: string;
  reviewBody: string;
  ratingValue: number;
  slug: string;
  features?: string[];
  publishedTime: string;
}

const content = await getCollection("uniview");
const cards: Card[] = content.map((item) => ({
  id: item.data.id,
  title: item.data.title,
  desc: item.data.desc,
  img: item.data.img.src,
  alt: item.data.alt,
  author: item.data.author,
  reviewBody: item.data.reviewBody,
  ratingValue: item.data.ratingValue,
  slug: item.slug,
  features: item.data.features,
  publishedTime: item.data.publishedTime,
}));

const pageTitle: string =
  "Trusted UNV Security Cameras Distributor in UAE | Lovosis Technology L.L.C";
const description =
  "Looking for reliable UNV security cameras in the UAE? Lovosis Technology is your trusted distributor, offering top-quality surveillance solutions for all needs.";

const canonicalUrl = new URL("/uniview", Astro.site).toString();

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    // Organization Schema
    {
      "@type": "Organization",
      name: pageTitle,
      url: "https://lovosis.com",
      logo: "https://lovosis.com/pictures/logo.png",
      description: description,
      sameAs: [
        "https://www.facebook.com/p/LOVOSIS-TECHNOLOGY-100083060600975/",
        "https://www.instagram.com/_lovosis_group_of_companies_/reels/",
      ],
      email: "sales@lovosis.com",
      telephone: "+971552929644",
      address: {
        "@type": "PostalAddress",
        streetAddress:
          "Satellite Market Naif Deira,Baghlaf Building Showroom No.5",
        addressLocality: "Dubai",
        addressCountry: "AE",
        addressRegion: "Dubai,United Arab Emirates",
        postalCode: "123421",
      },
    },
    // WebPage Schema
    {
      "@type": "WebPage",
      name: "Uniview | Lovosis Technology",
      url: "https://lovosis.com/uniview",
      description: description,
    },
    // Breadcrumb Schema
    
  ],
};
const metaTags = [
  {
    name: "pageTitle",
    content: `${pageTitle} | UNV Security Systems Distributor in Dubai`,
  },
  
  {
    name: "description",
    content: `${description} | Official UNV Security Systems Distributor in Dubai with Enterprise-grade Solutions`,
  },
  {
  name: "keywords",
  content: `UNV Dubai distributor, enterprise CCTV solutions, UNV NVR systems, commercial security systems UAE, AI surveillance Dubai, professional UNV installers, smart city security, industrial CCTV Dubai, UNV IP cameras UAE, UNV VMS solutions`
},
  { name: "robots", content: "index, follow" },
  { property: "og:title", content: "UNV Security Solutions Dubai | Enterprise-grade Systems | Lovosis" },
  { property: "og:description", content: description },
  { property: "og:image", content: `${Astro.url.origin}/pictures/unvhero.jpg` },
  { property: "og:type", content: "website" },
  { property: "og:locale", content: "en_AE" },
  { property: "og:locale:alternate", content: "ar_AE" },
  { name: "twitter:card", content: "summary_large_image" },
  { name: "twitter:title", content: "UNV Security Systems Wholesale Supplier | Dubai UAE" },
  { name: "twitter:description", content: description },
  { name: "twitter:image", content: `${Astro.url.origin}/pictures/unvhero.jpg` },
  { name: "geo.region", content: "AE" },
  { name: "geo.placename", content: "Dubai" },
  { name: "geo.position", content: "25.276987;55.296249" },
  { name: "ICBM", content: "25.276987, 55.296249" },
];
---

<MainLayout
  title={pageTitle}
  description={description}
  sd={structuredData}
  canonical={canonicalUrl}
>
  <div>
    <section
      class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
    >
      <div class="grid justify-items-center gap-5 lg:grid-cols-2">
        <!-- Left Column (Image) -->
        <div class="animate-fadeIn mr-12 flex flex-col justify-center">
          <img
            src="/pictures/unvhero.jpg"
            alt="billboard image"
            class="rounded-lg"
          />
        </div>

        <!-- Right Column (Text Content) -->
        <div class="animate-fadeInRight order-1 lg:order-2">
          <h2 class="text-3xl font-semibold text-gray-900 dark:text-gray-200">
            Trusted UNV Security Cameras Distributor in UAE | Lovosis Technology
            L.L.C
          </h2>
          <p
            class="text-md animate-fadeIn mt-4 text-gray-500 dark:text-gray-300"
          >
            Welcome to Lovosis Technology L.L.C., your trusted provider of
            advanced security systems in the Middle East. We are the official
            distributor of UNV products in the United Arab Emirates. We
            specialize in offering high-quality UNV CCTV cameras and security
            solutions designed to meet the increasing need for dependable
            surveillance in homes, businesses, and industrial areas. Protect
            your property with the best surveillance technology on the market.
            Contact Lovosis Technology L.L.C. today for affordable UNV CCTV
            cameras in the UAE!
          </p>

          <div class="animate-fadeIn mt-4 grid w-full sm:inline-flex">
            <PrimaryCTA title="Explore Our Product" url="/unvproducts" />
          </div>
        </div>
      </div>
      <style>
        @keyframes fadeIn {
          from {
            opacity: 0;
            transform: translateY(20px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }

        @keyframes fadeInRight {
          from {
            opacity: 0;
            transform: translateX(50px);
          }
          to {
            opacity: 1;
            transform: translateX(0);
          }
        }

        .animate-fadeIn {
          animation: fadeIn 0.8s ease-out forwards;
        }

        .animate-fadeInRight {
          animation: fadeInRight 0.8s ease-out forwards;
        }

        /* Smooth hover transitions for interactive elements */
        a {
          transition: all 0.3s ease;
        }
      </style>
    </section>
    <div
      class="grid h-auto grid-cols-1 gap-4 py-10 lg:grid-cols-4 lg:gap-8 lg:py-14"
    >
      {
        unvData.map((item) => (
          <article class="overflow-hidden rounded-lg shadow-sm transition hover:shadow-lg dark:shadow-gray-700/25">
            <img
              alt={item.title}
              src={item.image}
              class="h-56 w-full object-cover"
            />

            <div class="bg-white p-4 dark:bg-gray-900 sm:p-6">
              <a href="#">
                <h3 class="mt-0.5 text-lg text-gray-900 dark:text-white">
                  {item.title}
                </h3>
              </a>

              <p class="mt-2 line-clamp-3 text-base/relaxed text-gray-500 dark:text-gray-400">
                {item.description}
              </p>
            </div>
          </article>
        ))
      }
    </div>
    <div
      class="flex-item-center scroll-animate mt-16 grid justify-center gap-5 lg:grid-cols-2"
    >
      <!-- Left Column (Text Content) -->
      <div class="flex flex-col justify-center">
        <h3
          class="animate-on-scroll-right text-2xl font-bold text-neutral-800 dark:text-gray-200 md:text-4xl"
        >
          Why Choose UNV Camera for Home Security?
        </h3>
        <ul class="features-list">
          <li
            class="animate-on-scroll-right mt-4 p-2 text-gray-500 dark:text-gray-200"
            style="--delay: 0.1s"
          >
            Advanced Motion Detection and Analytics
          </li>
          <li
            class="animate-on-scroll-right p-2 text-gray-500 dark:text-gray-200"
            style="--delay: 0.2s"
          >
            Superior Image Quality
          </li>
          <li
            class="animate-on-scroll-right p-2 text-gray-500 dark:text-gray-200"
            style="--delay: 0.3s"
          >
            Seamless Integration
          </li>
          <li
            class="animate-on-scroll-right p-2 text-gray-500 dark:text-gray-200"
            style="--delay: 0.4s"
          >
            Remote Access and Monitoring
          </li>
          <li
            class="animate-on-scroll-right p-2 text-gray-500 dark:text-gray-200"
            style="--delay: 0.5s"
          >
            Cost-Effective Security
          </li>
          <li
            class="animate-on-scroll-right p-2 text-gray-500 dark:text-gray-200"
            style="--delay: 0.6s"
          >
            Durability and Reliability
          </li>
        </ul>
        <div
          class="animate-on-scroll-right mt-8 grid w-full sm:inline-flex"
          style="--delay: 0.7s"
        >
          <PrimaryCTA title="Contact Us" url="/contact" />
        </div>
      </div>

      <!-- Right Column (Image) -->
      <div
        class="animate-on-scroll-left order-1 mt-16 justify-center lg:order-2"
      >
        <img
          src="/pictures/unv.jpg"
          alt="UNV security camera system"
          class="rounded-lg"
          width="600"
          height="500"
          loading="lazy"
        />
      </div>
    </div>

    <style>
      /* Animation Styles */
      .animate-on-scroll-right {
        opacity: 0;
        transform: translateX(50px);
        transition: all 0.8s ease-out;
        transition-delay: var(--delay, 0);
      }

      .animate-on-scroll-left {
        opacity: 0;
        transform: translateX(-50px);
        transition: all 0.8s ease-out;
      }

      .scroll-animate.in-view .animate-on-scroll-right,
      .scroll-animate.in-view .animate-on-scroll-left {
        opacity: 1;
        transform: translateX(0);
      }

      /* List item animation */
      .features-list li {
        opacity: 0;
        transform: translateX(30px);
        transition: all 0.5s ease-out;
      }

      .scroll-animate.in-view .features-list li {
        opacity: 1;
        transform: translateX(0);
      }

      /* Delay for list items */
      .features-list li:nth-child(1) {
        transition-delay: 0.1s;
      }
      .features-list li:nth-child(2) {
        transition-delay: 0.2s;
      }
      .features-list li:nth-child(3) {
        transition-delay: 0.3s;
      }
      .features-list li:nth-child(4) {
        transition-delay: 0.4s;
      }
      .features-list li:nth-child(5) {
        transition-delay: 0.5s;
      }
      .features-list li:nth-child(6) {
        transition-delay: 0.6s;
      }
    </style>

    <script>
      // Intersection Observer for scroll animations
      document.addEventListener("DOMContentLoaded", function () {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("in-view");
              }
            });
          },
          { threshold: 0.1 }
        );

        document.querySelectorAll(".scroll-animate").forEach((section) => {
          observer.observe(section);
        });
      });
    </script>
    
     
  <div class="fadeInUps mb-5 mt-32 rounded-2xl text-center">
    <h2
      class="animate-fade-in-left text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-100 md:text-4xl md:leading-tight"
    >
      Contact for More Details
    </h2>
  </div>

  <div
    class="mb-20 rounded-2xl bg-gray-100 p-4 text-center dark:bg-neutral-500 sm:p-6 md:p-12"
  >
    <div class="bg-gray-100 py-4 dark:bg-neutral-500 sm:py-5">
      <div class="mx-auto max-w-7xl px-3 sm:px-6 lg:px-8">
        <div class="text-center">
          <p
            class="mx-auto max-w-2xl text-lg text-gray-500 dark:text-white sm:text-xl"
          >
            Get in touch with us for any inquiries, collaborations, or support.
            We're here to assist and answer your questions!
          </p>
        </div>

        <div class="mt-8 sm:mt-10">
          <div
            class="space-y-6 sm:space-y-8 md:grid md:grid-cols-2 md:gap-8 md:space-y-0 lg:grid-cols-3 lg:gap-10"
          >
            <!-- Address with Google Maps link -->
            <a
              href="https://maps.app.goo.gl/jzjpPCi9GFnigkd59"
              target="_blank"
              rel="noopener noreferrer"
              class="flex flex-col items-center hover:text-indigo-600 dark:hover:text-indigo-300 sm:flex-row sm:items-start"
            >
              <div class="mb-3 flex-shrink-0 sm:mb-0">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-md bg-indigo-500 text-white hover:bg-indigo-600"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="text-center sm:ml-4 sm:text-left">
                <p class="text-base text-gray-500 dark:text-white">
                  Baghlaf Building Showroom No.5 Satellite Market Naif Deira -
                  Dubai United Arab Emirates
                </p>
              </div>
            </a>

            <!-- Phone number with tel: link -->
            <a
              href="tel:+971552929644"
              class="flex flex-col items-center hover:text-indigo-600 dark:hover:text-indigo-300 sm:flex-row sm:items-start"
            >
              <div class="mb-3 flex-shrink-0 sm:mb-0">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-md bg-indigo-500 text-white hover:bg-indigo-600"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="text-center sm:ml-4 sm:text-left">
                <p class="text-base text-gray-500 dark:text-white">
                  +971 55 292 9644
                </p>
              </div>
            </a>

            <!-- Email with mailto: link -->
            <a
              href="mailto:sales@lovosis.com"
              class="flex flex-col items-center hover:text-indigo-600 dark:hover:text-indigo-300 sm:flex-row sm:items-start"
            >
              <div class="mb-3 flex-shrink-0 sm:mb-0">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-md bg-indigo-500 text-white hover:bg-indigo-600"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="text-center sm:ml-4 sm:text-left">
                <p class="text-base text-gray-500 dark:text-white">
                  sales@lovosis.com
                </p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
