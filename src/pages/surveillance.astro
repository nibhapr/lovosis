---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Surveillance Solution In Dubai | ${SITE.Title + " - " + "Custom Fabrication & Surveillance Solution Provider In Dubai, United Arab Emirates"}`;

interface Props {
  title: string;
  subTitle?: string;
  benefits?: Array<string>;
}
const canonicalUrl = new URL("/surveillance", Astro.site).toString();
const abtitle: string = "Surveillance Solution In Dubai";
const absubTitle: string =
  "Discover Lovosis, Dubai's authorized supplier of top-quality Surveillance & IT Solution.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": ["LocalBusiness", "Organization"],
  "@id": "https://lovosis.com/about",
  url: "https://lovosis.com/about",
  name: "Lovosis - Premier Surveillance Solutions Dubai",
  description:
    "Dubai's leading provider of CCTV installation, security systems & custom IT solutions. Certified experts in surveillance technology & business security solutions.",
  logo: "https://lovosis.com/pictures/logo.png",
  telephone: "+971509162488",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Satellite Market Naif Deira,Baghlaf Building Showroom No.5",
    addressLocality: "Dubai",
    addressRegion: "Dubai",
    postalCode: "123421",
    addressCountry: "AE",
  },
  priceRange: "$$-$$$",
  areaServed: {
    "@type": "State",
    name: "Dubai, UAE",
  },
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Security Solutions",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "CCTV Installation",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Custom Security Systems",
        },
      },
    ],
  },
};
const metaTags = [
  {
    name: "title",
    content: "Surveillance Solutions Dubai | CCTV & Security Systems | Lovosis",
  },
  {
    name: "description",
    content:
      "Dubai's trusted CCTV installation & security solutions. Professional surveillance systems with AI technology & 24/7 support.",
  },
  {
    name: "keywords",
    content:
      "CCTV Dubai, Security Cameras UAE, Surveillance Systems, AI Monitoring, Access Control Dubai",
  },
  { name: "robots", content: "index, follow" },
  { name: "geo.region", content: "AE-DU" },
  { name: "geo.placename", content: "Dubai" },
  { name: "ICBM", content: "25.276987, 55.296249" },
  { name: "contact", content: "sales@lovosis.com" },
  { name: "telephone", content: "+971509162488" },
  { name: "author", content: "Lovosis Technology L.L.C" },
];
---

<style>
  .autoRotate {
    animation: autoRotateAnimation;
    animation-timeline: view();
  }
  @keyframes autoRotateAnimation {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .autoShow {
    animation: autoShowAnimation both;
    animation-timeline: view(70% 5%);
  }

  @keyframes autoShowAnimation {
    from {
      opacity: 0;
      transform: translateY(200px) scale(0.3);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .fadeInRight {
    animation: fadeInRightAnimation;
    animation-timeline: view();
  }

  @keyframes fadeInRightAnimation {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<MainLayout
  title={pageTitle}
  sd={structuredData}
  canonical={canonicalUrl}
  meta={metaTags}
>
  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div
      class="mb-20 rounded-2xl bg-gray-100 p-5 text-center dark:bg-neutral-500 md:p-12"
    >
      <h1
        class="animate-fade-in-left text-balance text-3xl font-bold tracking-tight text-neutral-800 dark:text-neutral-100 md:text-6xl md:leading-tight"
      >
        {abtitle}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-200">
        {absubTitle}
      </p>
    </div>

    <div class="grid justify-items-center gap-5 lg:grid-cols-2">
      <div class="flex flex-col justify-center">
        <img src="/pictures/surveillance.webp" alt="billboard image" />
      </div>
      <div class="order-1 lg:order-2">
        <h2 class="text-3xl font-semibold text-gray-900 dark:text-gray-200">
          Surveillance Solution in Dubai
        </h2>
        <p class="text-md mt-4 text-gray-500 dark:text-gray-300">
          In today's dynamic world, the importance of robust surveillance
          solutions cannot be overstated. As Dubai continues to grow as a global
          hub of commerce, tourism, and innovation, ensuring the safety and
          security of its residents and visitors is paramount. At Lovosis, we
          provide state-of-the-art surveillance solutions tailored to meet the
          unique needs of Dubai's diverse landscape.
        </p>
      </div>
    </div>

    <div class="mb-20 mt-32 rounded-2xl text-center">
      <h1
        class="animate-fade-in-left text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-100 md:text-4xl md:leading-tight"
      >
        Applications of Lovosis Surveillance Solutions
      </h1>
    </div>

    <div class="mx-auto mt-20 max-w-7xl px-4 sm:px-6 lg:px-8 lg:py-1">
      <ul id="cards" class="grid list-none grid-cols-1 grid-rows-4 gap-4">
        <li
          class="card sticky top-32 cursor-pointer rounded-lg bg-white pt-4 shadow-xl transition-all duration-300 dark:bg-neutral-600"
          id="card_1"
        >
          <div
            class="card__content relative grid grid-cols-1 gap-1 rounded-lg p-5 text-left md:grid-cols-2"
          >
            <div>
              <h2 class="text-4xl font-light dark:text-neutral-200">
                Revolutionizing Security with Lovosis Surveillance Solutions
              </h2>
              <p
                class="mt-10 text-base font-light leading-normal dark:text-neutral-300"
              >
                At Lovosis, we redefine security through cutting-edge
                surveillance technology designed to adapt to diverse industries.
                From commercial spaces to residential areas, our systems provide
                unparalleled reliability, ensuring a safer environment for
                everyone.
              </p>
            </div>
            <figure class="overflow-hidden">
              <img
                src="/pictures/residense.jpg"
                alt="Image description"
                class="h-full w-full object-cover"
              />
            </figure>
          </div>
        </li>
        <li
          class="card sticky top-32 cursor-pointer rounded-lg bg-white pt-4 shadow-xl transition-all duration-300 dark:bg-neutral-600"
          id="card_1"
        >
          <div
            class="card__content relative grid grid-cols-1 gap-1 rounded-lg p-5 text-left md:grid-cols-2"
          >
            <div>
              <h2 class="text-4xl font-light dark:text-neutral-200">
                Your Partner in IT and Custom Fabrication Excellence
              </h2>
              <p
                class="mt-10 text-base font-light leading-normal dark:text-neutral-300"
              >
                Lovosis combines innovative IT solutions with expert custom
                fabrication to deliver tailored systems that meet your unique
                requirements. Our team ensures every project aligns with the
                highest industry standards for performance and efficiency.
              </p>
            </div>
            <figure class="overflow-hidden">
              <img
                src="/pictures/building-dahua.jpg"
                alt="Image description"
                class="h-full w-full object-cover"
              />
            </figure>
          </div>
        </li>
        <li
          class="card sticky top-32 cursor-pointer rounded-lg bg-white pt-4 shadow-xl transition-all duration-300 dark:bg-neutral-600"
          id="card_1"
        >
          <div
            class="card__content relative grid grid-cols-1 rounded-lg p-5 text-left md:grid-cols-2"
          >
            <div>
              <h2 class="text-4xl font-light dark:text-neutral-200">
                Dubai's Trusted Name in Advanced Fastening Technology
              </h2>
              <p
                class="mt-10 text-base font-light leading-normal dark:text-neutral-300"
              >
                Time is valuable, and Lovosis understands that. Our advanced
                fastening solutions accelerate assembly processes, ensuring
                installations are completed twice as fast without compromising
                quality or precision.
              </p>
            </div>
            <figure class="overflow-hidden">
              <img
                src="/pictures/publicspace.jpg"
                alt="Image description"
                class="h-full w-full object-cover"
              />
            </figure>
          </div>
        </li>
        <li
          class="card sticky top-32 cursor-pointer rounded-lg bg-white pt-4 shadow-xl transition-all duration-300 dark:bg-neutral-600"
          id="card_1"
        >
          <div
            class="card__content relative grid grid-cols-1 rounded-lg p-5 text-left md:grid-cols-2"
          >
            <div>
              <h2 class="text-4xl font-light dark:text-neutral-200">
                Empowering Businesses with Precision and Innovation
              </h2>
              <p
                class="mt-10 text-base font-light leading-normal dark:text-neutral-300"
              >
                With over 7k satisfied customers, Lovosis is committed to
                empowering businesses by enhancing their digital landscape. Our
                integrated surveillance and IT solutions provide unmatched
                security and technological efficiency.
              </p>
            </div>
            <figure class="overflow-hidden">
              <img
                src="/pictures/factory.jpg"
                alt="Image description"
                class="h-full w-full object-cover"
              />
            </figure>
          </div>
        </li>
      </ul>
    </div>
  </section>
</MainLayout>
