---
import MainLayout from "@/layouts/MainLayout.astro";
const canonicalUrl = new URL('/returnpolicy', Astro.site).toString();
const structuredData ={
    
     
      "@context": "https://schema.org",
      "@type": "OnlineStore",
      "name": "",
      "url": "https://lovosis.com",
      "sameAs": [ "https://www.facebook.com/lovosis",
        "https://www.linkedin.com/company/lovosis",
        "https://twitter.com/lovosis",],
      "logo": "https://lovosis.com/pictures/logo.png",
      "contactPoint": {
        "@type": "ContactPoint",
        telephone: "+971552929644",
        contactType: "Sales",
        areaServed: "IN",
        availableLanguage: "English",
        email: "sales@lovosis.com",
      },
     
      "hasMerchantReturnPolicy": {
        "@type": "MerchantReturnPolicy",
        "applicableCountry": ["TN", "NG","MU","PL","KZ","TZ","TR"],
        "returnPolicyCountry": "AE",
        "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
        "merchantReturnDays": 7,
        "returnMethod": "https://schema.org/ReturnByMail",
        "returnFees": "https://schema.org/FreeReturn",
